<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameDelete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ProgressBar
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:id="@+id/status_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textProgress"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textPerCent"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        style="@android:style/Widget.Holo.ActionButton.CloseMode"
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/button_stop"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/status_delete"
        android:layout_toEndOf="@+id/status_delete"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp" />

</LinearLayout>

